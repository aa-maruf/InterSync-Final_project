<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserORCompany"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:context=".gif"

        >

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/thisorthat"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/f"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-350dp"
        android:layout_marginTop="190dp"

        android:text="           Choose Yourself"
        android:textAlignment="center"
        android:textSize="20dp" />










    <ImageButton
        android:id="@+id/intern_section"
        android:layout_width="151dp"
        android:layout_height="300dp"
        android:layout_marginLeft="-303dp"
        android:layout_marginTop="290dp"

        android:src="@drawable/internpic"

        />


    <ImageButton
        android:id="@+id/comapny_section"
        android:layout_width="164dp"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="290dp"
        android:src="@drawable/compnaypic"

        />

        <!--    </LinearLayout>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-380dp"
        android:layout_marginTop="600dp">

        <TextView
            android:layout_width="201dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="Intern"
            android:textAlignment="center"
            android:textSize="15dp">

        </TextView>


        <TextView
            android:layout_width="201dp"
            android:layout_height="62dp"
            android:layout_marginTop="15dp"
            android:text="Company"
            android:textAlignment="center"
            android:textSize="15dp">

        </TextView>


    </LinearLayout>


</LinearLayout>



